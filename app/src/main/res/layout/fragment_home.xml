<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#ecb390"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/akwjdg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/welcome"
        />
    <TextView
        android:id="@+id/zzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAMAM"
        android:fontFamily="@font/leckerli_one"
        android:textSize="60dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/akwjdg"
        />
    <TextView
        android:id="@+id/penjelasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aplikasi ini memberikan informasi mengenai kuliner yang berada di Kota Salatiga."
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:paddingTop="20dp"
        android:layout_below="@id/zzz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pilihan kuliner ada di sidebar"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:paddingTop="20dp"
        android:layout_below="@id/penjelasan"/>

</RelativeLayout>